{
  "name": "peanut-infinite-app",
  "version": "1.0.0",
  "description": "花生网文无限流小说生成平台桌面应用",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start-server": "node server/index.js",
    "dev": "nodemon server/index.js",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "interactive-novel",
    "game",
    "story",
    "platform",
    "electron",
    "desktop-app"
  ],
  "author": "互动小说游戏平台开发团队",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "fs-extra": "^11.2.0",
    "node-fetch": "^2.6.12",
    "uuid": "^9.0.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.0"
  },
  "build": {
    "appId": "com.peanut-infinite.app",
    "productName": "花生网文",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "AppImage"
      ]
    }
  }
}